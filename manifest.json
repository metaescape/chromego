{
  "manifest_version": 3,
  "name": "Chromego",
  "version": "1.0",
  "description": "some keybindings for org mode utilities and url redirection, hide youtube and bilibili non-main frame cotent",
  "permissions": ["activeTab", "storage", "scripting", "webNavigation", "tabs"],
  "host_permissions": ["<all_urls>"],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    },
    {
      "matches": ["*://*.bilibili.com/*"],
      "js": ["bilibili.js"],
      "run_at": "document_start"
    },
    {
      "all_frames": true,
      "matches": ["https://www.youtube.com/*", "https://m.youtube.com/*"],
      "css": ["youtube.css"],
      "js": ["youtube.js"],
      "run_at": "document_start"
    }
  ],
  "commands": {
    "save_title_and_url": {
      "suggested_key": "Ctrl+Y",
      "description": "Save the current page title and URL to org mode"
    },
    "enable_rule": {
      "suggested_key": "Alt+X",
      "description": "enable rule"
    },
    "toggle_last_tab": {
      "suggested_key": "Alt+Tab",
      "description": "Toggle to the last opened tab"
    }
  },
  "action": {
    "default_popup": "popup.html"
  }
}
